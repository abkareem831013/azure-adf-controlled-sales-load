{
	"name": "DF_SCD_Type2_Customer",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Customer_Raw",
						"type": "DatasetReference"
					},
					"name": "SRCCustomerRaw"
				},
				{
					"dataset": {
						"referenceName": "DS_Dim_Customer",
						"type": "DatasetReference"
					},
					"name": "srcDimCustomer"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Customer_Error",
						"type": "DatasetReference"
					},
					"name": "sinkCustomerError"
				}
			],
			"transformations": [
				{
					"name": "drvCleanCustomer"
				},
				{
					"name": "csValidateCustomer"
				},
				{
					"name": "jnCustomerWithDim"
				},
				{
					"name": "drvDetectChanges"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CustomerID as integer,",
				"          Name as string,",
				"          City as string,",
				"          Email as string,",
				"          LastModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCCustomerRaw",
				"source(output(",
				"          SurrogateKey as integer,",
				"          CustomerID as integer,",
				"          Name as string,",
				"          City as string,",
				"          Email as string,",
				"          EffectiveStartDate as timestamp,",
				"          EffectiveEndDate as timestamp,",
				"          IsCurrent as boolean",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> srcDimCustomer",
				"SRCCustomerRaw derive(Email = lower(trim(Email)),",
				"          City = trim(City)) ~> drvCleanCustomer",
				"drvCleanCustomer split(!isNull(CustomerID) && !isNull(Email),",
				"     disjoint: false) ~> csValidateCustomer@(ValidRecords, InvalidRecords)",
				"csValidateCustomer@ValidRecords, srcDimCustomer join(csValidateCustomer@ValidRecords@CustomerID == srcDimCustomer@CustomerID",
				"     && ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> jnCustomerWithDim",
				"jnCustomerWithDim derive(isChanged = csValidateCustomer@ValidRecords@Name != srcDimCustomer@Name ||\r",
				"csValidateCustomer@ValidRecords@City != srcDimCustomer@City ||\r",
				"csValidateCustomer@ValidRecords@Email != srcDimCustomer@Email,",
				"          column1 = ERROR_FUNCTION('')) ~> drvDetectChanges",
				"csValidateCustomer@InvalidRecords sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          CustomerID as integer,",
				"          Name as string,",
				"          City as string,",
				"          Email as string,",
				"          ErrorReason as string,",
				"          ErrorTime as timestamp",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sinkCustomerError"
			]
		}
	}
}